<%- include('../parts/top.ejs') %>

    <div class="container" style="width: 70%; margin: 100px auto;">
        <form class="row gy-2 gx-3 align-items-center" action="add-product" enctype="multipart/form-data" method="POST">
            <div class="col-auto">
              <label class="form-check-label" for="autoSizingInput">Product Name</label>
              <input type="text" name="name" class="form-control" id="autoSizingInput" placeholder="أضف اسم المنتج ">
            </div>

            <div class="col-auto">
                <label class="form-check-label" for="autoSizingInput">Price</label>
                <input type="text" name="suk" class="form-control" id="autoSizingInput" placeholder="السعر">
              </div>

              <div class="col-auto">
                <label class="form-check-label" for="autoSizingInput">Discription</label>
                <input type="text" name="cartDisc" class="form-control" id="autoSizingInput" placeholder="وصف المنتج ">
              </div>

              <div class="mb-3">
                <label for="formFileMultiple" class="form-label">Multiple files input example</label>
                <input class="form-control" type="file" id="formFileMultiple" name="prodImgs">
              </div>
            <div class="col-auto">
              <label class="form-check-label" for="autoSizingInputGroup">Username</label>
              <div class="input-group">
                <div class="input-group-text">Price $</div>
                <input type="text" name="price" class="form-control" id="autoSizingInputGroup" placeholder="السعر">
              </div>
            </div>
            <div class="col-auto">
              <label class="form-check-label" for="autoSizingSelect">Categories</label>
              <select class="form-select" id="autoSizingSelect" name="categId">
                <option selected>أضف التصنيف</option>
                <!-- add category -->

                <% categories.forEach((category , index) => { %>
                 
                <option value="<%= category._id %>" > <%= category.name %> </option>
                    
                <% console.log(category._id) }) %>
              </select>
            </div>
            <div class="col-auto">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="autoSizingCheck">
                <label class="form-check-label" for="autoSizingCheck">
                  Remember me
                </label>
              </div>
            </div>
            <div class="col-auto">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>  </div>


<%- include('../parts/bottom.ejs') %> 